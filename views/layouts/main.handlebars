<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="User Authentication">
    <meta name="author" content="">

    <title>Axel claver</title>

    <link rel="manifest" href="/manifest.json">

    <link rel="stylesheet" href="/styles/main.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <!-- <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script> -->
    <script src="/js/vendor/bigtext.js"></script>
    
    <script src="/js/vendor/js.cookie.js"></script>
    <script src="/js/vendor/rAF.js"></script>
    <script src="/js/vendor/objectdetect.js"></script>
    <script src="/js/vendor/objectdetect.frontalface_alt.js"></script>

    <script src="/js/main.js"></script>
    <script src="/js/home.js"></script>
    <script src="/js/games.js"></script>
    <script src="/js/missingletter.js"></script>
    <script src="/js/missingnumber.js"></script>
    <script src="/js/storychat.js"></script>
  </head>

  <body>
    <div id="all" class="container">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
          <div class="navbar-header">
            <p class="navbar-brand noselect">{{#if user}}LearninGames{{else}}Axel Claver | <a href="AxelClaverCV2016{{{__ 'CVlang'}}}.pdf">Javascript Developer</a>{{/if}} {{#if ingame}}/ {{ingame}}{{/if}} </p>
          </div>
          <div class="back-nav noselect">
            {{#if user}}
              {{#if ingame}}
                <a href="/games">X</a>
              {{else}}
                <a href="/logout">{{{__ "logout"}}}</a>
              {{/if}}
            {{/if}}

          </div>
      </nav>

      <div class="text-center">        
      {{#if error}}
        <p class="alert alert-warning noselect">{{error}}</p>
      {{/if}}
      <!--
      {{#if success}}
        <p class="alert alert-success noselect">{{success}}</p>
      {{/if}}
      {{#if notice}}
        <p class="alert alert-info noselect">{{notice}}</p>
      {{/if}}
      -->
      </div>

      <!--where our other templates will insert-->
      {{{body}}}
    
      {{#unless ingame}}
        <footer class="footer langsselector">
          <div class="langs langES" lang="es">ES</div>      
          <div class="langs langEN" lang="en">EN</div>      
        </footer>
      {{/unless}}
    </div>
    <div id="overlay"></div>
  </body>
</html>